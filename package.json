{
  "name": "@adamhancock/halopsa-mcp",
  "version": "0.1.1",
  "description": "MCP server for HaloPSA API",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "halopsa-mcp": "dist/index.js"
  },
  "keywords": [
    "mcp",
    "halopsa",
    "reporting"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "scripts": {
    "build": "tsc",
"prepublish": "npm run build || echo 'Skipping build step'"
    "dev": "tsx watch --env-file=.env src/index.ts",
    "start": "node dist/index.js",
    "inspect": "node --inspect dist/index.js",
    "inspector": "npx mcp-inspector tsx --env-file=.env src/index.ts"
  }
}
